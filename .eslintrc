{
  "_source": "http://amobiz.github.io/2015/12/21/applying-eslint-using-atom-linter-eslint/",
  "_NOTE": "copy this file to folder you want; rename it as .eslintrc.*; if possible reload text editor;",
  "eslintConfig": {
    "root": true
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "globals": {
    "atom": true,
    "describe": true,
    "it": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console":0,
    "no-unused-vars": [
      1,
      {
        "vars": "all",
        "args": "after-used"
      }],
    "indent": ["warn", 2],
    "semi": [1, "always"],
    "quotes": [1, "single"],
    "linebreak-style": [1, "unix"]
  }
}
