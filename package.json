{
  "name": "atom-i18n",
  "main": "./lib/main",
  "version": "0.3.1",
  "description": "one i18n package for multiple languages",
  "keywords": [
    "atom",
    "i18n",
    "l10n",
    "internationalization",
    "localization",
    "language",
    "translate",
    "translation"
  ],
  "repository": "https://github.com/liuderchi/atom-i18n",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "cson": "^4.0.0"
  },
  "configSchema": {
    "locale": {
      "type": "string",
      "default": "template",
      "title": "Language",
      "description": "Please <strong>Reload Atom</strong> after changing locale.",
      "enum": [
        {
          "value": "ar",
          "description": "Arabic (ar)"
        },
        {
          "value": "es",
          "description": "Spanish (es)"
        },
        {
          "value": "de",
          "description": "German (de)"
        },
        {
          "value": "fr",
          "description": "French (fr)"
        },
        {
          "value": "hi",
          "description": "Hindi (hi)"
        },
        {
          "value": "ja",
          "description": "Japanese (ja)"
        },
        {
          "value": "ko",
          "description": "Korean (ko)"
        },
        {
          "value": "nl",
          "description": "Dutch (nl)"
        },
        {
          "value": "pt-br",
          "description": "Portuguese(Brazil) (pt-br)"
        },
        {
          "value": "zh-cn",
          "description": "Simplified Chinese (zh-cn)"
        },
        {
          "value": "zh-tw",
          "description": "Traditional Chinese (zh-tw)"
        },
        {
          "value": "template",
          "description": "English (en)"
        }
      ]
    }
  }
}
